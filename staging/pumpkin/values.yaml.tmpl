argo-cd:
  enabled: true
  config:
    enableAnonymousAccess: true
    url: /pumpkin/argo-cd
    resourceExclusions:
      - apiGroups:
          - "*"
        kinds:
          - "TaskRun"
  applicationController:
    appResync: 3600
  rbac:
    policyDefault: role:admin
  server:
    extraArgs:
    - --basehref
    - /pumpkin/argo-cd
  ingress:
    enabled: true
    annotations:
      kubernetes.io/ingress.class: traefik
      traefik.ingress.kubernetes.io/auth-response-headers: "X-Forwarded-User"
      traefik.ingress.kubernetes.io/auth-type: "forward"
      traefik.ingress.kubernetes.io/auth-url: "http://traefik-forward-auth-kubeaddons.kubeaddons.svc.cluster.local:4181/"
      traefik.ingress.kubernetes.io/rule-type: PathPrefixStrip
    hosts:
      - paths: [/pumpkin/argo-cd]
        host: ""
  webhookIngress:
    enabled: true
    annotations:
      kubernetes.io/ingress.class: traefik
      traefik.ingress.kubernetes.io/request-modifier: "ReplacePathRegex: ^/pumpkin/argo-cd/(.*) /$1"
    hosts:
      - paths: [/pumpkin/argo-cd/api/webhook]
        host: ""

serviceAccount: build-bot

pumpkin:
  pullPolicy: Always
  image: "$({ .pumpkinImage })"
  syncPeriod: "5m"
  watchNamespaces: []

controller:
  resources:
    limits:
      cpu: 500m
      memory: 512Mi
    requests:
      cpu: 100m
      memory: 128Mi

eventSink:
  resources:
    limits:
      cpu: 1000m
      memory: 1Gi
    requests:
      cpu: 250m
      memory: 256Mi
  defaultStepResources:
    limits:
      cpu: 1000m
      memory: 2Gi
    requests:
      cpu: 250m
      memory: 512Mi

global:
  prometheus:
    enabled: false
    # Service monitor selector used by prometheus operator
    release: prometheus-kubeaddons

ingress:
  enabled: true
  annotations:
    kubernetes.io/ingress.class: traefik
    traefik.ingress.kubernetes.io/rule-type: PathPrefixStrip
  hosts:
    - paths: [/pumpkin/hook]
      host: ""

tekton-dashboard:
  ingress:
    enabled: true
    annotations:
      kubernetes.io/ingress.class: traefik
      traefik.ingress.kubernetes.io/auth-response-headers: "X-Forwarded-User"
      traefik.ingress.kubernetes.io/auth-type: "forward"
      traefik.ingress.kubernetes.io/auth-url: "http://traefik-forward-auth-kubeaddons.kubeaddons.svc.cluster.local:4181/"
      traefik.ingress.kubernetes.io/rule-type: PathPrefixStrip
    hosts:
      - paths: [/pumpkin/tekton]
        host: ""

minio:
  accessKey: abcd
  secretKey: defghijk
  service:
    name: s3-us-east-1
    port: 80
  defaultBucket:
    enabled: true
    name: artifacts
  # TODO: cache expiry, etc so we don't fill this up. But increase the default size to 100Gi to delay the inevitable.
  persistence:
    size: 100Gi

